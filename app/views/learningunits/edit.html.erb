<!-- Validation failure messages -->

<% if @learningunit.errors.any? %>
  <% @learningunit.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Learningunit #<%= @learningunit.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_learningunit/<%= @learningunit.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for theme_id -->
          <div class="form-group">
            <label for="theme_id" class="col-sm-2 control-label">
              Theme
            </label>
            <div class="col-sm-10">
              <input type="text" id="theme_id" name="theme_id" placeholder="Theme" class="form-control" value="<%= @learningunit.theme_id %>">
            </div>
          </div>

          <!-- Label and input for network_id -->
          <div class="form-group">
            <label for="network_id" class="col-sm-2 control-label">
              Network
            </label>
            <div class="col-sm-10">
              <input type="text" id="network_id" name="network_id" placeholder="Network" class="form-control" value="<%= @learningunit.network_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Learningunit
              </button>
              or
              <a href="/learningunits/<%= @learningunit.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
